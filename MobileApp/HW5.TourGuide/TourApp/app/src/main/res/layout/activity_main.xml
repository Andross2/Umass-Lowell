<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vdc.tourapp.MainActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:padding="10dp">

        <TextView
            android:id="@+id/lowell"
            style="@style/title"
            android:text="@string/lowell" />

        <TextView
            android:id="@+id/park"
            style="@style/CategoryStyle"
            android:background="@drawable/park"
            android:layout_marginBottom="10dp"
            android:text="@string/parks" />

        <TextView
            android:id="@+id/restaurant"
            style="@style/CategoryStyle"
            android:background="@drawable/restaurant"
            android:layout_marginBottom="10dp"
            android:text="@string/restaurant" />

        <TextView
            android:id="@+id/museums"
            style="@style/CategoryStyle"
            android:background="@drawable/musesum"
            android:text="@string/museums" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
